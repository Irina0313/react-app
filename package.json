{
  "name": "next-app",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "eslint components/ --report-unused-disable-directives --max-warnings 0",
    "lint:fix": "next lint --fix",
    "format:fix": "npx prettier --write .",
    "prepare": "husky install",
    "test": "jest --watch",
    "coverage": "jest --coverage",
    "test:ci": "jest --ci"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,ts,tsx}": [
      "npm run format:fix",
      "npm run lint"
    ]
  },
  "dependencies": {
    "@reduxjs/toolkit": "^1.9.7",
    "next": "^14.0.3",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-redux": "^8.1.3"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^6.1.4",
    "@testing-library/react": "^14.1.2",
    "@types/jest": "^29.5.10",
    "@types/node": "20.9.4",
    "@types/react": "^18",
    "@types/react-dom": "^18",
    "@typescript-eslint/eslint-plugin": "^6.12.0",
    "eslint": "^8",
    "eslint-config-next": "14.0.3",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-prettier": "^5.0.1",
    "husky": "^8.0.3",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "lint-staged": "^15.1.0",
    "next-redux-wrapper": "^8.1.0",
    "prettier": "3.1.0",
    "typescript": "5.3.2"
  }
}
